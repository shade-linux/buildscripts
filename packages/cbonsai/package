# Pre-install
git clone https://gitlab.com/jallbrit/cbonsai
cd cbonsai

# Build
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    cc -Wall -Wextra -Wshadow -Wpointer-arith -Wcast-qual -pedantic cbonsai.c  -lncurses -ltinfo -lpanel -o cbonsai
elif [[ "$OSTYPE" == "darwin"* ]]; then
    cc -Wall -Wextra -Wshadow -Wpointer-arith -Wcast-qual -pedantic cbonsai.c  -lncurses -lpanel -o cbonsai
else 
    exit 1
fi

# Install
cp cbonsai /usr/local/shade/bin

# Post-install
